@model List<Supplier.ViewModels.CategorySpecsViewModel>
@{
    if (Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group row">
                <input asp-for="@Model[i].CategorySpec.Id" type="hidden" />
                @Html.DisplayName(Model[i].CategorySpec.Name)
                @*, new { @class = "col-lg-4 col-form-label" }*@
                <div class="col-lg-6">
                    <input asp-for="@Model[i].ProductSpec.Value" class="form-control" />
                    <span asp-validation-for="@Model[i].ProductSpec.Value" class="text-danger"></span>
                </div>

            </div>
        }
    }
    else
    {
        <div class="col-lg-9 centered-container">
            <span class="text-danger">No specifications were found for the chosen category!</span>
        </div>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}