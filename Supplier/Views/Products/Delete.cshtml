@model Supplier.ViewModels.ProductDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0 flex-display">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active"><a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Product.Id">Product - @Model.Product.Code</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product @Model.Product.Code</h4>
                    <ul class="nav nav-pills mb-3">
                        <li class="nav-item">
                            <a href="#navpills-1" class="nav-link active" data-toggle="tab" aria-expanded="false">Details</a>
                        </li>
                        <li class="nav-item">
                            <a href="#navpills-2" class="nav-link" data-toggle="tab" aria-expanded="false">Product Specifications</a>
                        </li>
                        <li class="nav-item">
                            <a href="#navpills-3" class="nav-link" data-toggle="tab" aria-expanded="true">Product's Category Specifications</a>
                        </li>
                    </ul>
                    <div class="tab-content br-n pn">
                        <div id="navpills-1" class="tab-pane active">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-md-4 col-xl-2">
                                    <img src="@Model.Product.ImgUrl" alt="@Model.Product.Name" class="img-fluid thumbnail m-r-15">
                                </div>
                                <div class="col-sm-6 col-md-8 col-xl-10">
                                    <div class="col-xl-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="basic-list-group">
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item flex-display">
                                                            <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Html.DisplayNameFor(model => model.Product.Name)</span>
                                                            <span class="label flex-display">@Model.Product.Name</span>
                                                        </li>
                                                        <li class="list-group-item flex-display">
                                                            <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Html.DisplayNameFor(model => model.Product.Price)</span>
                                                            <span class="label">@Model.Product.Price</span>
                                                        </li>
                                                        <li class="list-group-item flex-display">
                                                            <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Html.DisplayNameFor(model => model.Product.Factory.Name)</span>
                                                            <span class="label">@Model.Product.Factory.Name</span>
                                                        </li>
                                                        <li class="list-group-item flex-display">
                                                            <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Html.DisplayNameFor(model => model.Product.Category.Name)</span>
                                                            <span class="label">@Model.Product.Category.Name</span>
                                                        </li>
                                                        <li class="list-group-item flex-display">
                                                            <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Html.DisplayNameFor(model => model.Product.Description)</span>
                                                            <span class="label">@Model.Product.Description</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="navpills-2" class="tab-pane">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-md-4 col-xl-2">
                                    <img src="@Model.Product.ImgUrl" alt="@Model.Product.Name" class="img-fluid thumbnail m-r-15">
                                </div>
                                <div class="col-sm-6 col-md-8 col-xl-10">
                                    <div class="col-xl-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="basic-list-group">
                                                    <ul class="list-group list-group-flush">
                                                        @foreach (var specification in @Model.ProductUniqueSpecs)
                                                        {
                                                            <li class="list-group-item flex-display">
                                                                <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@specification.Name</span>
                                                                <span class="label">@specification.Value</span>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="navpills-3" class="tab-pane">
                            <div class="row align-items-center">
                                <div class="col-sm-6 col-md-4 col-xl-2">
                                    <img src="@Model.Product.ImgUrl" alt="@Model.Product.Name" class="img-fluid thumbnail m-r-15">
                                </div>
                                <div class="col-sm-6 col-md-8 col-xl-10">
                                    <div class="col-xl-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="basic-list-group">
                                                    <ul class="list-group list-group-flush">
                                                        @for (int i = 0; i < Model.ProductSpecs.Count; i++)
                                                        {
                                                            <li class="list-group-item flex-display">
                                                                <span class="label label-primary flex-display" style="width: 125px; justify-content: center;">@Model.CategorySpecs[i].Name</span>
                                                                <span class="label">@Model.ProductSpecs[i].Value</span>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="@Model.Product.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">
                            <span class="btn btn-secondary color-white">Back to List</span>
</a>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->
